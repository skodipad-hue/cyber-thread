<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Step into Feed</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Custom cyber theme -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        cyberbg: '#050510',
                        cybercard: '#0d0d25',
                        cyberaccent: '#00f7ff',
                        cybertext: '#d0d6ff'
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-cyberbg min-h-screen flex items-center justify-center text-cybertext">

    <div class="bg-cybercard p-8 rounded-xl shadow-2xl w-full max-w-md border border-cyberaccent">

        <h1 class="text-3xl font-bold text-center text-cyberaccent mb-6 tracking-widest">
            STEP INTO FEED
        </h1>

        <!-- LOGIN FORM -->
        <form method="POST" action="/login" class="space-y-4">

            <div>
                <label class="block mb-1 text-sm">Email</label>
                <input
                    type="text"
                    name="email"
                    required
                    class="w-full p-2 rounded bg-black border border-cyberaccent text-cybertext focus:outline-none focus:ring-2 focus:ring-cyberaccent"
                >
            </div>

            <div>
                <label class="block mb-1 text-sm">Password</label>
                <input
                    type="password"
                    name="password"
                    required
                    class="w-full p-2 rounded bg-black border border-cyberaccent text-cybertext focus:outline-none focus:ring-2 focus:ring-cyberaccent"
                >
            </div>

            <button
                class="w-full bg-cyberaccent text-black font-bold py-2 rounded hover:bg-white transition-all duration-300">
                ROLL IN
            </button>
        </form>

        <!-- CREATE ACCOUNT -->
        <form method="GET" action="/new-guy-page" class="mt-6 text-center">
            <button
                class="text-cyberaccent hover:text-white underline transition-all">
                Create Account
            </button>
        </form>

    </div>

</body>
</html>
