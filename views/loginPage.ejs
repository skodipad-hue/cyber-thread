<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Step into Feed</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Twitter-style light theme -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        twitterBg: "#f5f9fc",
                        twitterCard: "#ffffff",
                        twitterBorder: "#e5eff6",
                        twitterBlue: "#1d9bf0",
                        twitterHover: "#e8f3ff",
                        twitterText: "#0f172a",
                        twitterMuted: "#64748b"
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-twitterBg min-h-screen flex items-center justify-center text-twitterText antialiased">

    <div class="bg-twitterCard w-full max-w-md p-8 rounded-2xl border border-twitterBorder shadow-sm">

        <h1 class="text-2xl font-bold text-center text-twitterBlue mb-6 tracking-tight">
            Step into Feed
        </h1>

        <!-- LOGIN FORM -->
        <form method="POST" action="/login" class="space-y-5">

            <div>
                <label class="block mb-1 text-sm text-twitterMuted">
                    Email
                </label>
                <input
                    type="text"
                    name="email"
                    required
                    class="w-full px-4 py-2 rounded-lg border border-twitterBorder
                           focus:outline-none focus:ring-2 focus:ring-twitterBlue
                           focus:border-transparent"
                >
            </div>

            <div>
                <label class="block mb-1 text-sm text-twitterMuted">
                    Password
                </label>
                <input
                    type="password"
                    name="password"
                    required
                    class="w-full px-4 py-2 rounded-lg border border-twitterBorder
                           focus:outline-none focus:ring-2 focus:ring-twitterBlue
                           focus:border-transparent"
                >
            </div>

            <button
                class="w-full bg-twitterBlue text-white font-semibold py-2.5 rounded-full
                       hover:bg-[#1a8cd8] transition">
                Log In
            </button>
        </form>

        <!-- CREATE ACCOUNT -->
        <div class="mt-6 text-center">
            <form method="GET" action="/new-guy-page">
                <button
                    class="text-twitterBlue font-medium hover:underline">
                    Create Account
                </button>
            </form>
        </div>

    </div>

</body>
</html>
