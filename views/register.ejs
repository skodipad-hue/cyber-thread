<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Join In</title>

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        /* LIGHT */
                        twitterBg: "#f5f9fc",
                        twitterCard: "#ffffff",
                        twitterBorder: "#e5eff6",
                        twitterBlue: "#1d9bf0",
                        twitterHover: "#e8f3ff",
                        twitterText: "#0f172a",
                        twitterMuted: "#64748b",

                        /* DARK ‚Äî Graphite Blue */
                        darkBg: "#0f1419",
                        darkCard: "#161b22",
                        darkBorder: "#232a31",
                        darkText: "#e6edf3",
                        darkMuted: "#8b949e"
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-twitterBg dark:bg-darkBg text-twitterText dark:text-darkText
             min-h-screen flex flex-col items-center justify-center antialiased">

    <!-- THEME TOGGLE (TOP RIGHT) -->
    <button id="themeToggle"
        class="fixed top-6 right-6 p-2 rounded-full
               hover:bg-twitterHover dark:hover:bg-white/10
               transition shadow-sm z-50">
        <span id="sun" class="text-lg">‚òÄÔ∏è</span>
        <span id="moon" class="text-lg hidden">üåô</span>
    </button>

    <!-- üîµ CYBER THREADS (CENTER ALIGNED) -->
    <h1 class="mb-8 text-3xl font-extrabold tracking-widest
               text-twitterBlue uppercase text-center">
        CYBER THREADS
    </h1>

    <!-- REGISTER CARD -->
    <div class="w-full max-w-md
                bg-twitterCard dark:bg-darkCard
                border border-twitterBorder dark:border-darkBorder
                rounded-2xl p-8 shadow-sm">

        <h2 class="text-2xl font-bold text-center mb-6 tracking-tight">
            Join In
        </h2>

        <!-- REGISTER FORM -->
        <form method="POST" action="/register" class="space-y-5">

            <div>
                <label class="block mb-1 text-sm text-twitterMuted dark:text-darkMuted">
                    Username
                </label>
                <input
                    type="text"
                    name="username"
                    required
                    class="w-full px-4 py-2 rounded-lg bg-transparent
                           border border-twitterBorder dark:border-darkBorder
                           focus:outline-none focus:ring-2 focus:ring-twitterBlue
                           focus:border-transparent"
                >
            </div>

            <div>
                <label class="block mb-1 text-sm text-twitterMuted dark:text-darkMuted">
                    Email
                </label>
                <input
                    type="email"
                    name="email"
                    required
                    class="w-full px-4 py-2 rounded-lg bg-transparent
                           border border-twitterBorder dark:border-darkBorder
                           focus:outline-none focus:ring-2 focus:ring-twitterBlue
                           focus:border-transparent"
                >
            </div>

            <div>
                <label class="block mb-1 text-sm text-twitterMuted dark:text-darkMuted">
                    Password
                </label>
                <input
                    type="password"
                    name="password"
                    required
                    class="w-full px-4 py-2 rounded-lg bg-transparent
                           border border-twitterBorder dark:border-darkBorder
                           focus:outline-none focus:ring-2 focus:ring-twitterBlue
                           focus:border-transparent"
                >
            </div>

            <button
                type="submit"
                class="w-full mt-2 bg-twitterBlue text-white
                       font-semibold py-2.5 rounded-full
                       hover:bg-[#1a8cd8] transition">
                Create Account
            </button>

        </form>

        <!-- BACK TO LOGIN -->
        <div class="mt-6 text-center">
            <form method="GET" action="/login">
                <button class="text-twitterBlue font-medium hover:underline">
                    Back to Login
                </button>
            </form>
        </div>

    </div>

    <!-- THEME TOGGLE SCRIPT -->
    <script>
        const html = document.documentElement;
        const toggle = document.getElementById("themeToggle");
        const sun = document.getElementById("sun");
        const moon = document.getElementById("moon");

        if (localStorage.theme === "dark") {
            html.classList.add("dark");
            sun.classList.add("hidden");
            moon.classList.remove("hidden");
        }

        toggle.onclick = () => {
            const isDark = html.classList.toggle("dark");
            sun.classList.toggle("hidden", isDark);
            moon.classList.toggle("hidden", !isDark);
            localStorage.theme = isDark ? "dark" : "light";
        };
    </script>

</body>
</html>
