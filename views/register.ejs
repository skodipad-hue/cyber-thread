<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Join In</title>

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Twitter-style light theme -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        twitterBg: "#f5f9fc",
                        twitterCard: "#ffffff",
                        twitterBorder: "#e5eff6",
                        twitterBlue: "#1d9bf0",
                        twitterHover: "#e8f3ff",
                        twitterText: "#0f172a",
                        twitterMuted: "#64748b"
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-twitterBg min-h-screen flex items-center justify-center text-twitterText antialiased">

    <div class="w-full max-w-md bg-twitterCard border border-twitterBorder rounded-2xl p-8 shadow-sm">

        <h1 class="text-2xl font-bold text-center text-twitterBlue mb-6 tracking-tight">
            Join In
        </h1>

        <!-- REGISTER FORM -->
        <form method="POST" action="/register" class="space-y-5">

            <div>
                <label class="block mb-1 text-sm text-twitterMuted">
                    Username
                </label>
                <input
                    type="text"
                    name="username"
                    required
                    class="w-full px-4 py-2 rounded-lg border border-twitterBorder
                           focus:outline-none focus:ring-2 focus:ring-twitterBlue
                           focus:border-transparent"
                >
            </div>

            <div>
                <label class="block mb-1 text-sm text-twitterMuted">
                    Email
                </label>
                <input
                    type="email"
                    name="email"
                    required
                    class="w-full px-4 py-2 rounded-lg border border-twitterBorder
                           focus:outline-none focus:ring-2 focus:ring-twitterBlue
                           focus:border-transparent"
                >
            </div>

            <div>
                <label class="block mb-1 text-sm text-twitterMuted">
                    Password
                </label>
                <input
                    type="password"
                    name="password"
                    required
                    class="w-full px-4 py-2 rounded-lg border border-twitterBorder
                           focus:outline-none focus:ring-2 focus:ring-twitterBlue
                           focus:border-transparent"
                >
            </div>

            <button
                type="submit"
                class="w-full mt-2 bg-twitterBlue text-white font-semibold py-2.5
                       rounded-full hover:bg-[#1a8cd8] transition">
                Create Account
            </button>

        </form>

        <!-- BACK TO LOGIN -->
        <div class="mt-6 text-center">
            <form method="GET" action="/login">
                <button
                    class="text-twitterBlue font-medium hover:underline">
                    Back to Login
                </button>
            </form>
        </div>

    </div>

</body>
</html>
