<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<title>Feed</title>

<script src="https://cdn.tailwindcss.com"></script>

<script>
tailwind.config = {
    theme: {
        extend: {
            colors: {
                cyberBg: "#0a0a0f",
                cyberCard: "#12121a",
                cyberGlow: "#00f6ff",
                cyberText: "#e5e7eb"
            },
            boxShadow: {
                glow: "0 0 25px rgba(0,246,255,0.25)",
                glowHover: "0 0 40px rgba(0,246,255,0.45)"
            }
        }
    }
}
</script>
</head>

<body class="bg-cyberBg text-cyberText font-mono min-h-screen">

<!-- HEADER -->
<header class="flex justify-between items-center p-6 border-b border-cyberGlow/30 bg-cyberCard shadow-glow">
    <a href="/login"
       class="px-4 py-2 bg-red-500 text-black rounded-lg font-bold hover:bg-red-400 transition">
        Logout
    </a>

    <h1 class="text-3xl font-bold text-cyberGlow tracking-widest drop-shadow-[0_0_8px_#00f6ff]">
        CYBER THREADS
    </h1>

    <a href="/profile/<%= userId %>"
       class="px-4 py-2 bg-cyberGlow text-black rounded-lg font-bold hover:bg-white transition">
       Profile
    </a>
</header>

<!-- GRID FEED -->
<section class="max-w-7xl mx-auto mt-10 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 pb-20 px-6">

    <% if (!posts || posts.length === 0) { %>
        <p class="col-span-3 text-center text-gray-400 text-lg">No posts yet.</p>
    <% } %>

    <% posts.forEach(post => { %>

    <!-- GRID ITEM -->
    <div class="w-full transform hover:scale-[1.03] transition-all duration-300">

        <!-- CARD -->
        <div class="w-full bg-cyberCard rounded-xl border border-cyberGlow/20 shadow-glow
                    hover:shadow-glowHover p-5 transition-all duration-300">

            <!-- CLICKABLE AREA -->
            <a href="/posts/<%= post.id %>" class="block w-full">

                <!-- USER + TIME -->
                <div class="flex justify-between items-start w-full">
                    <h3 class="text-cyberGlow font-bold text-lg text-left">
                        @<%= post.username %>
                    </h3>
                    <small class="text-gray-400 text-xs whitespace-nowrap">
                        <%= post.timeAgo %>
                    </small>
                </div>

                <!-- POST CONTENT (TRUE LEFT ALIGN) -->
                <p class="mt-3 w-full text-left text-gray-300 whitespace-pre-wrap leading-relaxed break-words">
                    <%= post.content %>
                </p>

                <% if (post.url) { %>
                    <img src="<%= post.url %>"
                         class="mt-4 rounded-lg border border-cyberGlow/30 shadow-lg
                                hover:shadow-cyan-400/40 transition duration-300"
                         alt="Post image">
                <% } %>

            </a>

        </div>
    </div>

    <% }) %>

</section>

</body>
</html>
